<!DOCTYPE html>
<html lang="en">
<%- include("layouts/head.ejs",{
title:"teklafilm" ,
des:"" ,
pageUrl:"https://teklafilm.com"
}) %>
<body   >

<% include layouts/svg.ejs %>

<%- include layouts/header.ejs%>



<div class="container" style="margin-top:60px">

    <div class="row">
        <div class="col-md-8 p-1">
            <div class="row  make-me-sticky">
                <div class="col-12 bg-white content-cl shadow-sm border p-1">
                    <div class="col-12 p-1">
                        <% sliders = res.sliders %>
                        <div id="teklaSlider" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <% for(i=0;i<sliders.length;i++){%>
                                    <li data-target="#teklaSlider" data-slide-to="<%- i%>" <% if(i==0){ %> class="active"<% } %>></li>
                                <% } %>

                            </ol>
                            <div class="carousel-inner">
                                <% for(i=0;i<sliders.length;i++){%>
                                    <div class="carousel-item <% if(i==0){ %> active<% } %>">
                                        <a href="<%- sliders[i].link%>">
                                            <img class="d-block w-100 sliderH" src="<%- host+'/'+sliders[i].image_url%>" alt="First slide">
                                            <div class="carousel-caption d-none d-md-block">
                                                <h5><%- sliders[i].title%></h5>
                                                <p><%- sliders[i].des%></p>
                                            </div>
                                        </a>

                                    </div>
                                <% } %>

                            </div>
                            <a class="carousel-control-prev" href="#teklaSlider" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#teklaSlider" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 p-1 my-auto ">
                        <!--<div class="col-12 buyF p-5">-->
                        <!--<div align="center">-->
                        <!--Buy our Film-->

                        <!--</div>-->
                        <!--</div>-->
                        <hr>
                    </div>
                    <div class="col-12 p1">
                        <% for(i=0;i<videos.length;i++){
                            v = videos[i];
                        %>
                        <div class="row">
                            <div class="col-3">
                                <a href="<%- host+'/v/'+v.slug %>" class="custum-link">
                                    <img src="<%- host+'/'+v.thumb %>" class="thumbs">
                                </a>
                            </div>
                            <div class="col-9">
                                <a class="custum-link vTitle" href="<%- host+'/v/'+v.slug %>"><%- v.title %></a>
                                <p>
                                    <%- v.des %>
                                </p>
                            </div>
                        </div>
                        <hr>
                        <% }%>

                    </div>

                </div>
                <% if(vCnt > 10){ %>
                    <div class="col-md-12 shadow-sm border pb-1 mt-2  bg-white text-dark">
                        <div class="row mt-md-3 mt-2">
                            <div class="col-12 p-0" align="center">

                                <div class="pagination">
                                    <%
                                        next = page + 1;
                                        pre  = page - 1;
                                    if (page < 4 ) {
                                        href = refU+'?page='+pre;
                                        if (pre < 2){
                                            href = refU;
                                        }
                                    %>
                                    <a href="<%- href %>" class="pl-2 pr-2" ><svg class="navBIcon"><use xlink:href="#left"></use></svg></a>
                                    <a href="<%- refU %>" <% if(page == 1){ %>class="active"<% } %> >1</a>
                                    <a href="<%- refU+'?page=2' %>" <% if(vCnt< 10){%> style="display: none" <%} %> <% if(page == 2){ %>class="active"<% } %> >2</a>
                                    <a href="<%- refU+'?page=3' %>" <% if(vCnt< 20){%> style="display: none" <%} %><% if(page == 3){ %>class="active"<% } %> >3</a>
                                    <a href="<%- refU+'?page=4' %>" <% if(vCnt< 30){%> style="display: none" <%} %><% if(page == 4){ %>class="active"<% } %> >4</a>
                                    <a href="<%- refU+'?page=5' %>" <% if(vCnt< 40){%> style="display: none" <%} %><% if(page == 5){ %>class="active"<% } %> >5</a>
                                    <a href="<%- refU+'?page='+next %>" <% if(page*10 > vCnt){%> style="display: none" <%} %> class="pl-2 pr-2" ><svg class="navBIcon"><use xlink:href="#right"></use></svg></a>

                                    <% }
                                    else { %>
                                        <a href="<%- refU+'?page='+ pre %>" class="pl-2 pr-2" ><svg class="navBIcon"><use xlink:href="#left"></use></svg></a>
                                        <a href="<%- refU+'?page='+(page-2) %>" <% if( page-2 < 1){%> style="display: none" <%} %>  ><%- page-2 %></a>
                                        <a href="<%- refU+'?page='+(page-1) %>" <% if( page-1 < 1){%> style="display: none" <%} %>  ><%- page-1 %></a>
                                        <a href="<%- refU+'?page='+ page %>" class="active" ><%- page %></a>
                                        <a href="<%- refU+'?page='+(page+1) %>" <% if(page*10 > vCnt){%> style="display: none" <%} %>  ><%- page+1 %></a>
                                        <a href="<%- refU+'?page='+(page+2) %>" <% if((page+1)*10 > vCnt){%> style="display: none" <%} %>  ><%- page+2 %></a>
                                        <a href="<%- refU+'?page='+next %>" <% if(page*10 > vCnt){%> style="display: none" <%} %> class="pl-2 pr-2" ><svg class="navBIcon"><use xlink:href="#right"></use></svg></a>
                                    <% } %>



                                </div>

                            </div>
                        </div>
                    </div>
                <% } %>
            </div>

        </div>
        <div class="col-md-4 p-1">
            <%- include("layouts/sidebar.ejs",{
            res:res
            }) %>
        </div>
    </div>
</div>
    <%- include("layouts/footer.ejs",{
    res:res
    }) %>


</body>
<%- include layouts/scripts.ejs%>

</html>
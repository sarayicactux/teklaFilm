<% if( cars.length == 0 ){ %>
    <select id="model" name="model" class="select2 form-control siteInputs">

        <option value="0">خودرویی برای این برند تعریف نشده</option>
    </select>
    
    <% } else { %>
<select id="model" name="model" class="select2 form-control siteInputs">

    <%
    for (i=0;i<cars.length;i++){%>
        <option value="<%-   cars[i].id %>"><%- cars[i].model %></option>
    <% }  %>
</select>
<% } %>
    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2()


        });
    </script>
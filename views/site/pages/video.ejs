<!DOCTYPE html>
<html lang="en">
<%- include("../layouts/head.ejs",{
title:"teklafilm :: "+ v.title ,
des:"teklafilm :: "+ v.title ,
pageUrl:"https://teklafilm.com"
}) %>
<body   >

<% include ../layouts/svg.ejs %>

<%- include ../layouts/header.ejs%>



<div class="container" style="margin-top:60px">
    <div class="row">
        <div class="col-md-8 p-1">
            <div class="row  make-me-sticky">
                <div class="col-12 bg-white content-cl shadow-sm border p-1">
                    <div class="col-12 p-1">
                        <div class="row">
                            <div class="col-4">
                                <a class="custom-link" title="<%- v.title %>" href="<%- host+'/v/'+v.slug %>">
                                    <img src="<%- host+"/"+v.thumb %>" title="<%- v.title %>" alt="<%- v.title %>"  style="width:100%;">
                                </a>
                            </div>
                            <div class="col-8"><%- v.des %></div>
                        </div>
                        <hr >
                        <div class="row">
                            <div class="col-12">
                                <%- v.text %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <h4>Video </h4>
                            </div>
                                <div class="col-12">
                                    <video  class="videoU" data-path="<%- host+'/'+v.demo_file %>" controls="" preload="auto">
                                        <source src="<%- host+'/'+v.demo_file %>" type="video/mp4">
                                    </video>
                                </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div align="center">
                                    <a href="<%-host%>/download" class="custum-link btn-success btn pt-3 pb-3 pr-5 pl-5 text-white">Download Files</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 p-1">
            <%- include("../layouts/sidebar.ejs",{
            res:res
            }) %>
        </div>
    </div>
</div>
<%- include("../layouts/footer.ejs",{
res:res
}) %>


</body>
<%- include ../layouts/scripts.ejs%>

</html>